<h4 class="ui center aligned medium icon header">
  <i class="circular blue comments icon"></i>
  Chatroom
</h4>
<div class="ui two column grid">
  <div class="twelve wide column">
    <div class="ui fluid raised card chatbox">
      <div class="content" id="messages">
        <div class="ui feed" id="message-container">
          <h4 class="ui header">Messages</h4>
          <%= render @messages %>
        </div>
      </div>
      <div class="extra content">
        <%= form_for(@message, html: { class: "ui reply form", role: "form"} , url: message_path, remote: true) do |form|  %>
          <div class="field">
            <div class="ui fluid icon input" id="message-input">
              <%= form.text_field :body %>
              <%= form.button '<i class="bordered inverted blue icon edit"></i>'.html_safe %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  <div class="four wide column">
    <div class="ui fluid raised card chatbox">
      <div class="content">
        <div class="ui inverted vertical menu">
          <a class="item">
            Home
          </a>
          <a class="item">
            Messages
          </a>
          <a class="item">
            Friends
          </a>
        </div>
      </div>
    </div>
  </div>
</div>
