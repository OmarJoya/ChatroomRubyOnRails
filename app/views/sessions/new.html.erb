<h4 class="ui center aligned medium icon header">
  <i class="circular blue user icon"></i>
  Log in
</h4>
<div class="ui placeholder segment">
  <div class="ui two column very relaxed stackable grid">
    <div class="column">
      <%= form_for(:session, html: { class: "ui form", role: "form" }, url: login_path) do |form| %>
      <div class="field">
        <%= form.label :username, "Username" %>
        <div class="ui left icon input">
          <%= form.text_field :username, placeholder: "Username" %>
          <i class="user icon"></i>
        </div>
      </div>
      <div class="field">
        <%= form.label :password, "Password" %>
        <div class="ui left icon input">
          <%= form.password_field :password, placeholder: "Username" %>
          <i class="lock icon"></i>
        </div>
      </div>
      <%= form.button "Login", class: "ui blue submit button" %>
    </div>
  <% end %>
  <div class="middle aligned column">
    <div class="ui big button">
      <i class="signup icon"></i>
      Sign Up
    </div>
  </div>
</div>
<div class="ui vertical divider">
  Or
</div>
</div>
